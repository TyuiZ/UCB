#include <stdio.h>
#include <math.h>
#include <string.h>

int main(){
    int a[4],i;
    int soma1 ,soma2,par;
    for (i = 0; i < 4; i++)
    {
        printf("Me o valor %d :",i+1);
        scanf("%d",&a[i]);
    }
    
    soma1 = a[2] + a[3];
    soma2 = a[0]+a[1];
    par = a[0] % 2;
    if (a[1]>a[2] && a[3]>a[0] && soma1>soma2 && a[2]>0 && a[3]>0 &&par ==0)
    {
       printf("Valores aceitos");
    }else{
        printf("Valores nao aceitos");
    }
    return 0;
}
